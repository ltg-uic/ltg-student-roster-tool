# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                      	controllers.Assets.at(path="/public", file="index.html")

GET		/:run					controllers.Application.getPeopleInRun(run: String)
POST 	/:run					controllers.Application.addPersonToRun(run: String)
PUT		/:run/:person			controllers.Application.updatePersonInRun(run: String, person: String)
DELETE	/:run/:person			controllers.Application.deletePersonInRun(run: String, person: String)
	

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)
